// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id                String      @id @default(cuid())
  orderNumber       String      @unique
  status            OrderStatus @default(RECEIVED)

  // Client info
  customerName      String
  customerEmail     String
  customerPhone     String
  customerCity      String

  // Order details
  description       String?
  sourceImageUrl    String
  preferredSize     String?
  preferredColor    String?
  notes             String?

  // Approval
  selectedVariantId String?
  approvedAt        DateTime?

  // Shipping
  shippingAddress   Json?
  shippingMethod    String?
  shippingCost      Decimal?    @db.Decimal(10, 2)
  trackingNumber    String?

  // Payment
  price             Decimal?    @db.Decimal(10, 2)
  paidAt            DateTime?
  stripeSessionId   String?
  stripePaymentId   String?

  // Notifications
  subscribeToUpdates Boolean     @default(false)

  // Timestamps
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  shippedAt         DateTime?
  deliveredAt       DateTime?

  // Relations
  variants          ModelVariant[]
  review            Review?
  invoice           Invoice?

  @@index([status])
  @@index([customerEmail])
  @@index([createdAt])
}

enum OrderStatus {
  RECEIVED
  MODELING
  PENDING_APPROVAL
  APPROVED
  PAID
  PRINTING
  SHIPPED
  DELIVERED
  CANCELLED
}

model ModelVariant {
  id              String   @id @default(cuid())
  orderId         String
  order           Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  previewImageUrl String
  description     String?
  createdAt       DateTime @default(now())

  @@index([orderId])
}

model Review {
  id        String   @id @default(cuid())
  orderId   String   @unique
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  rating    Int
  comment   String?
  photoUrls Json?
  isPublic  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Example {
  id          String   @id @default(cuid())
  title       String
  description String?
  imageUrls   Json
  category    String?
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())

  @@index([isActive, sortOrder])
}

model AdminUser {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String
  createdAt    DateTime @default(now())
}

model ProductCategory {
  id          String    @id @default(cuid())
  name        String    @unique
  description String?
  imageUrl    String?   // Category picture
  isActive    Boolean   @default(true)
  sortOrder   Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  products    Product[]

  @@index([isActive, sortOrder])
}

model Product {
  id              String           @id @default(cuid())
  name            String
  description     String?
  basePrice       Decimal          @db.Decimal(10, 2) // Base price before variant adjustments
  categoryId      String?
  category        ProductCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  imageUrls       Json             // Array of image URLs (main product images)
  modelUrl        String?          // URL to 3D model file (.stl, .obj, etc.)
  modelPreviewUrl String?          // Preview/thumbnail of the 3D model
  isActive        Boolean          @default(true)
  isFeatured      Boolean          @default(false)
  sortOrder       Int              @default(0)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  variants        ProductVariant[]

  // SEO & Metadata
  slug            String?          @unique // URL-friendly identifier
  metaTitle       String?          // Custom page title for SEO
  metaDescription String?          // Meta description for search engines
  metaKeywords    String?          // Keywords for SEO (comma-separated)

  @@index([isActive, sortOrder])
  @@index([categoryId])
  @@index([slug])
}

model ProductVariant {
  id              String   @id @default(cuid())
  productId       String
  product         Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  name            String?  // Optional variant name (e.g., "Red Large")
  size            String?  // Size option (e.g., "S", "M", "L", "XL" or "10cm", "20cm")
  color           String?  // Color option (e.g., "Red", "#FF0000")
  imageUrls       Json     // Array of image URLs specific to this variant
  priceAdjustment Decimal  @default(0) @db.Decimal(10, 2) // Price +/- from base price
  stock           Int      @default(0)
  isActive        Boolean  @default(true)
  sortOrder       Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([productId])
  @@index([isActive])
}

model Invoice {
  id            String        @id @default(cuid())
  invoiceNumber String        @unique
  orderId       String        @unique
  order         Order         @relation(fields: [orderId], references: [id], onDelete: Cascade)
  issueDate     DateTime      @default(now())
  subtotal      Decimal       @db.Decimal(10, 2)
  shippingCost  Decimal       @db.Decimal(10, 2)
  total         Decimal       @db.Decimal(10, 2)
  pdfUrl        String?
  status        InvoiceStatus @default(DRAFT)
  sentAt        DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([invoiceNumber])
  @@index([issueDate])
}

model InvoiceCounter {
  id        String   @id @default("default")
  year      Int
  counter   Int      @default(0)
  updatedAt DateTime @updatedAt
}

enum InvoiceStatus {
  DRAFT
  GENERATED
  SENT
  CANCELLED
}

model CompanySettings {
  id            String   @id @default("default")
  name          String   @default("Print3D S.R.L.")
  cui           String   @default("RO12345678")
  regCom        String   @default("J12/1234/2024")
  address       String   @default("Str. Exemplu nr. 10")
  city          String   @default("Cluj-Napoca")
  county        String   @default("Cluj")
  postalCode    String   @default("400001")
  country       String   @default("Romania")
  bankName      String   @default("Banca Transilvania")
  iban          String   @default("RO49AAAA1B31007593840000")
  capitalSocial String   @default("200 RON")
  email         String   @default("contact@print3d.ro")
  phone         String   @default("+40 123 456 789")
  updatedAt     DateTime @updatedAt
}
